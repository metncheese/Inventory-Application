<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.inventoryapplication.view.home.HomeFragment"
        android:label="Beranda"
        tools:layout="@layout/fragment_home" />
    <action
        android:id="@+id/action_homeFragment_to_profileFragment"
        app:destination="@id/navigation_profile" />

    <fragment
        android:id="@+id/navigation_asset"
        android:name="com.example.inventoryapplication.view.assets.AssetsFragment"
        android:label="Aset"
        tools:layout="@layout/fragment_assets" />

    <fragment
        android:id="@+id/navigation_loan"
        android:name="com.example.inventoryapplication.view.loans.LoansFragment"
        android:label="Pinjaman"
        tools:layout="@layout/fragment_loans" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.inventoryapplication.view.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />
</navigation>